{% extends "layout.html.twig" %}

{% block container %}

<div class="container">

  <h1>Descripcions</h1>
    
    <table class="table table-hover">
   		<thead>
   			<tr>
   				<th>Nom producte</th>
   				<th>Opcions</th>
   			</tr>
   		</thead>
   		<tbody>
        {% for producte in productes %}
   			<tr>
   				<td>{{ producte.descripcio_curta }}</td>
   				<td><a href="/descripcions/afegir/{{ producte.id_producte }}">Afegir</a> | 
          <a href="/descripcions/traduir/{{ producte.id_producte }}">Traduir</a></td>
   			</tr>
        {% endfor %}
   		</tbody>
    </table>

</div>

{% endblock %}