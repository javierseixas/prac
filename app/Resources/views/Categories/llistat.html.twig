{% extends "layout.html.twig" %}

{% block container %}

<div class="container">

  <h1>Categories</h1>

    <p><a href="/categories/crear" class="btn btn-primary">Crear categoria</a></p>
    
    <table class="table table-hover">
   		<thead>
   			<tr>
   				<th>Nom producte</th>
   				<th>Opcions</th>
   			</tr>
   		</thead>
   		<tbody>
        {% for producte in productes %}
   			<tr>
   				<td>{{ producte.descripcio }}</td>
   				<td><a href="/categories/afegir/{{ producte.id_tipus_producte }}">afegir traducci√≥</a> | 
          <a href="/categories/classificar/{{ producte.id_tipus_producte }}">classificar</a> | <a href="/categories/desclassificar/{{ producte.id_tipus_producte }}">desclassificar</a> | <a href="/categories/eliminar/{{ producte.id_tipus_producte }}">eliminar</a></td>
   			</tr>
        {% else %}
        <tr><td colspan="2">No hi ha categories creades</td></tr>
        {% endfor %}
   		</tbody>
    </table>

</div>

{% endblock %}